#include <iostream>
using namespace std;

int main() {
    
    
    int n=8;
    for(int i=n-1;i>=0;i--){
        for(int j=0;j<i;j++){
            cout<<" ";
        }
        for(int j=0;i+j<n;j++){
            if(i & j)
            {
                cout<<"  ";
            }
            else{
                cout<<"* ";
            }
        }
        cout<<endl;
    }
    return 0;
}
