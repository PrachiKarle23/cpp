1
3*2
4*5*6
10*9*8*7


#include <iostream>
using namespace std;

int main() {
    
    
    int n=4,k=0,j;
    for(int i=1;i<=n;i++){
        if(i%2!=0){
            for(j=k+1;j<k+i;j++){
                cout<<j<<"*";
            }
            cout<<j++;
            k=j;
        }
        else{
            k=k+i-1;
            for (j=k; j>k-i+1; j--) 
                cout << j << "*"; 
            cout << j ;  
        }
        cout<<endl;
    }
    return 0;
}
